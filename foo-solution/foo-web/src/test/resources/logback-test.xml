<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="net.homecredit.mer.web" level="debug"/>
    <logger name="org.springframework.integration.handler" level="warn"/>
    <logger name="org.springframework.web.servlet.mvc.method.annotation" level="trace"/>
    <logger name="org.hibernate.SQL" level="debug"/>
    <logger name="org.springframework.test" level="debug"/>
    <logger name="org.springframework.aop.aspectj" level="debug"/>
</configuration>